          "inputs": {
            "theme": {
              "type": "string",
              "description": "Design theme"
            },
            "mood": {
              "type": "string",
              "description": "Desired mood"
            }
          },
          "outputs": {
            "palettes": {
              "type": "array",
              "description": "Suggested palettes"
            }
          },
          "parameters": {}
