{
  // Master MCP suite for VS Code / Copilot Agent Mode.
  // Copy or symlink this file to .vscode/mcp.json in the workspace root.
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "docs": {
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["${workspaceFolder}/mcp/docs_server/server.py"],
      "env": {
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      }
    },
    "n00t-capabilities": {
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["${workspaceFolder}/mcp/capabilities_server.py"],
      "env": {
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      }
    }
    // Optional (uncomment when tokens are available):
    // "github": {
    //   "command": "npx",
    //   "args": ["-y", "@modelcontextprotocol/server-github"],
    //   "env": { "GITHUB_TOKEN": "${env:GITHUB_TOKEN}" }
    // },
    // "search": {
    //   "command": "npx",
    //   "args": ["-y", "@modelcontextprotocol/server-brave-search"],
    //   "env": { "BRAVE_API_KEY": "${env:BRAVE_API_KEY}" }
    // }
  },
  "settings": {
    "filesystem": {
      "allowedPaths": [
        "${workspaceFolder}",
        "${workspaceFolder}/n00clear-fusion",
        "${workspaceFolder}/n00-school",
        "${workspaceFolder}/n00-horizons",
        "${workspaceFolder}/n00-dashboard",
        "${workspaceFolder}/n00-frontiers",
        "${workspaceFolder}/n00-cortex",
        "${workspaceFolder}/n00t",
        "${workspaceFolder}/n00tropic",
        "${workspaceFolder}/ops"
      ]
    }
  }
}
