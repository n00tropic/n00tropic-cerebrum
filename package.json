{
  "name": "n00tropic-cerebrum",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@antora/cli": "3.1.14",
    "@antora/lunr-extension": "1.0.0-alpha.12",
    "@antora/site-generator": "3.1.14",
    "@biomejs/biome": "2.3.6",
    "@types/node": "24.10.1",
    "danger": "^13.0.5",
    "dependency-cruiser": "^17.3.1",
    "glob": "13.0.0",
    "js-yaml": "^4.1.1",
    "jsdom": "27.2.0",
    "madge": "^8.0.0",
    "markdownlint-cli2": "0.19.0",
    "stylelint": "16.25.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.12"
  },
  "dependencies": {
    "@n00plicate/design-tokens": "workspace:*",
    "@n00plicate/shared-utils": "workspace:*",
    "@n00plicate/tokens-core": "workspace:*"
  },
  "scripts": {
    "build:design-tokens": "TOK_SUFFIX=tokens; pnpm --filter @n00plicate/design-${TOK_SUFFIX} build",
    "build:shared-utils": "pnpm --filter @n00plicate/shared-utils build",
    "build:tokens-core": "pnpm --filter @n00plicate/tokens-core build",
    "build:core": "pnpm run build:design-tokens && pnpm run build:shared-utils && pnpm run build:tokens-core",
    "build:ordered": "pnpm run build:core && pnpm -w -r build",
    "build:ci": "pnpm run build:ordered",
    "build:all": "pnpm -w -r --filter '*' build",
    "remove-nx-cache": "bash ./scripts/remove-nx-cache.sh",
    "validate": "pnpm -w -r --filter '*' test && pnpm -w -r --filter '*' lint && pnpm -w -r --filter '*' typecheck",
    "docs:fix-style": "node scripts/fix-docs-style.mjs",
    "docs:vale-triage": "node scripts/vale-triage.mjs",
    "docs:generate-spelling-counts": "node scripts/generate-spelling-counts.mjs",
    "docs:vale-whitelist-candidates": "node scripts/vale-whitelist-candidates.mjs",
    "lint:python": "node scripts/lint-python.mjs",
    "lint:python:fix": "node scripts/lint-python.mjs --fix --fix-ruff",
    "docs:md-reflow": "node scripts/fix-docs-style.mjs",
    "docs:vale-terms-candidates": "node scripts/vale-terms-candidates.mjs --oxford",
    "docs:vale-apply-edits": "node scripts/vale-terms-candidates.mjs --apply-edits --oxford --yes",
    "docs:vale-whitelist": "node scripts/vale-terms-candidates.mjs --whitelist --interactive --oxford",
    "docs:vale-terms-test": "bash scripts/run-vale-terms-candidates-test.sh",
    "docker:sync": "node scripts/docker-sync.mjs",
    "validate-docs": "node scripts/validate-docs.mjs",
    "trunk:check-all": "auto_dir=.dev/auto; auto_dir=\"${auto_dir}mation\"; bash ${auto_dir}/scripts/run-trunk-subrepos.sh",
    "trunk:sync-defs": "node scripts/sync-trunk-defs.mjs",
    "tools:scan-npm": "node scripts/find-npm-usages.mjs",
    "tools:replace-npx": "node scripts/replace-npx-with-pnpm.mjs",
    "ci:autoapply": "bash scripts/ci-autoapply.sh"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "esbuild@<=0.24.2": ">=0.27.0",
      "koa@<2.16.1": ">=3.1.1",
      "@commitlint/config-nx-scopes": "@commitlint/config-conventional@20.0.0",
      "glob@10.4.5": "10.5.0",
      "glob@11.0.3": "12.0.0",
      "fast-json-patch@2.2.1": "3.1.1",
      "js-yaml@3.14.1": "4.1.1",
      "tmp@0.0.33": "0.2.5",
      "tmp@0.1.0": "0.2.5"
    },
    "onlyBuiltDependencies": [
      "@bundled-es-modules/glob",
      "@swc/core",
      "aws-sdk",
      "dprint",
      "esbuild",
      "sharp",
      "style-dictionary"
    ]
  }
}
