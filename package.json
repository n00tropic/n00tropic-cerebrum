{
  "name": "n00tropic-cerebrum",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/node": "24.10.1",
    "dependency-cruiser": "^17.2.0",
    "glob": "^11.0.3",
    "jsdom": "27.2.0",
    "madge": "^8.0.0",
    "markdownlint-cli2": "0.18.1",
    "stylelint": "16.25.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "@antora/cli": "^3.1.14",
    "@antora/lunr-extension": "^1.0.0-alpha.11",
    "@antora/site-generator": "^3.1.14",
    "danger": "^13.0.5"
  },
  "dependencies": {
    "@n00plicate/design-tokens": "workspace:*",
    "@n00plicate/shared-utils": "workspace:*",
    "@n00plicate/tokens-core": "workspace:*"
  },
  "scripts": {
    "build:design-tokens": "pnpm --filter @n00plicate/design-tokens build",
    "build:shared-utils": "pnpm --filter @n00plicate/shared-utils build",
    "build:tokens-core": "pnpm --filter @n00plicate/tokens-core build",
    "build:core": "pnpm run build:design-tokens && pnpm run build:shared-utils && pnpm run build:tokens-core",
    "build:ordered": "pnpm run build:core && pnpm -w -r build",
    "build:ci": "pnpm run build:ordered",
    "build:all": "pnpm -w -r --filter '*' build",
    "remove-nx-cache": "bash ./scripts/remove-nx-cache.sh",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:ci:all": "pnpm -w -r exec -- vitest run --config vitest.config.ts --reporter verbose",
    "test:docs-only": "node ./scripts/run-doc-tests.mjs",
    "antora:local": "bash ./scripts/antora-local-clone.sh",
    "antora:ci": "pnpm exec antora antora-playbook.ci.yml --stacktrace",
    "convert:fix": "make convert-fix",
    "validate": "pnpm -w exec -- vitest run || true && pnpm -w -r --filter '*' lint && pnpm -w -r --filter '*' typecheck",
    "validate:docs": "make validate-docs",
    "validate:docs-local": "SKIP_VALE=1 make validate-docs"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "esbuild@<=0.24.2": ">=0.27.0",
      "koa@<2.16.1": ">=3.1.1",
      "@commitlint/config-nx-scopes": "@commitlint/config-conventional@20.0.0"
    },
    "onlyBuiltDependencies": [
      "@bundled-es-modules/glob",
      "@swc/core",
      "aws-sdk",
      "dprint",
      "esbuild",
      "sharp",
      "style-dictionary"
    ]
  }
}
