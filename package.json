{
  "name": "n00tropic-cerebrum",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=24.11.0",
    "pnpm": ">=10.23.0"
  },
  "devDependencies": {
    "@antora/cli": "3.1.14",
    "@antora/lunr-extension": "1.0.0-alpha.12",
    "@antora/site-generator": "3.1.14",
    "@asciidoctor/core": "^3.0.4",
    "@biomejs/biome": "2.3.10",
    "@types/node": "24.10.4",
    "asciidoctor-kroki": "^0.18.1",
    "busboy": "^1.6.0",
    "cspell": "^9.3.2",
    "danger": "^13.0.5",
    "dependency-cruiser": "^17.3.1",
    "glob": "13.0.0",
    "js-yaml": "^4.1.1",
    "jsdom": "27.3.0",
    "madge": "^8.0.0",
    "markdownlint-cli2": "0.20.0",
    "stylelint": "16.26.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "@n00plicate/design-tokens": "workspace:*",
    "@n00plicate/shared-utils": "workspace:*",
    "@n00plicate/tokens-core": "workspace:*"
  },
  "scripts": {
    "cli": "python3 cli.py",
    "preinstall": "node scripts/guard-root-pnpm-install.mjs",
    "build:design-tokens": "TOK_SUFFIX=tokens; pnpm --filter @n00plicate/design-${TOK_SUFFIX} build",
    "build:shared-utils": "pnpm --filter @n00plicate/shared-utils build",
    "build:tokens-core": "pnpm --filter @n00plicate/tokens-core build",
    "build:core": "pnpm run build:design-tokens && pnpm run build:shared-utils && pnpm run build:tokens-core",
    "build:ordered": "pnpm run build:core && pnpm -w -r build",
    "build:ci": "pnpm run build:ordered",
    "build:all": "pnpm -w -r --filter '*' build",
    "remove-nx-cache": "bash ./scripts/remove-nx-cache.sh",
    "validate": "pnpm -w -r --filter '*' test && pnpm -w -r --filter '*' lint && pnpm -w -r --filter '*' typecheck",
    "docs:fix-style": "node scripts/fix-docs-style.mjs",
    "docs:vale-triage": "node scripts/vale-triage.mjs",
    "docs:generate-spelling-counts": "node scripts/generate-spelling-counts.mjs",
    "docs:vale-whitelist-candidates": "node scripts/vale-whitelist-candidates.mjs",
    "docs:sync-n00menon": "node scripts/sync-n00menon-docs.mjs --write",
    "docs:sync-n00menon:check": "node scripts/sync-n00menon-docs.mjs --check",
    "lint:python": "node scripts/lint-python.mjs",
    "lint:python:fix": "node scripts/lint-python.mjs --fix --fix-ruff",
    "docs:md-reflow": "node scripts/fix-docs-style.mjs",
    "docs:vale-terms-candidates": "node scripts/vale-terms-candidates.mjs --oxford",
    "docs:vale-apply-edits": "node scripts/vale-terms-candidates.mjs --apply-edits --oxford --yes",
    "docs:vale-whitelist": "node scripts/vale-terms-candidates.mjs --whitelist --interactive --oxford",
    "docs:vale-terms-test": "bash scripts/run-vale-terms-candidates-test.sh",
    "docs:asciidoc-lint": "node scripts/lint-asciidoc.mjs",
    "docs:tag-enforce": "node scripts/enforce-doc-tags.mjs",
    "docs:tag-enforce:dry": "node scripts/enforce-doc-tags.mjs --dry-run",
    "docs:tag-summary": "node scripts/tag-summary.mjs",
    "docs:tag-suggest": "node scripts/generate-doc-tags.mjs",
    "docker:sync": "node scripts/docker-sync.mjs",
    "validate-docs": "node scripts/validate-docs.mjs",
    "docs:lint": "pnpm run docs:tag-enforce && pnpm run validate-docs && pnpm run docs:asciidoc-lint",
    "search:freshness-check": "node scripts/check-typesense-freshness.mjs",
    "lint:imports": "pnpm -C n00plicate lint:imports",
    "cleanup:contrib": "node scripts/cleanup-contrib.mjs",
    "antora:ci": "pnpm exec antora antora-playbook.ci.yml --stacktrace",
    "ci:validate:cortex": "pnpm -C n00-cortex validate:schemas",
    "trunk:check-all": "auto_dir=.dev/auto; auto_dir=\"${auto_dir}mation\"; bash ${auto_dir}/scripts/run-trunk-subrepos.sh",
    "trunk:upgrade": "bash scripts/trunk-upgrade-workspace.sh --check",
    "trunk:sync-defs": "node scripts/sync-trunk-defs.mjs",
    "qa:workspace": "bash scripts/workspace-qa.sh",
    "qa:workspace:full": "bash scripts/workspace-qa.sh --full",
    "tools:scan-npm": "node scripts/find-npm-usages.mjs",
    "tools:replace-npx": "node scripts/replace-npx-with-pnpm.mjs",
    "tools:check-toolchain": "node scripts/check-toolchain-pins.mjs",
    "tools:sync-node": "bash scripts/sync-node-version.sh",
    "python:lock": "bash scripts/refresh-python-lock.sh",
    "python:lock:check": "bash scripts/refresh-python-lock.sh --check",
    "tools:sync-python-version": "bash scripts/sync-python-version.sh",
    "tools:check-runners": "node scripts/check-runners.mjs",
    "tsconfig:check": "node scripts/check-tsconfig-consistency.mjs",
    "penpot:smoke": "node n00plicate/scripts/update-penpot-images.mjs --dry-run",
    "ui:serve": "node ui/fusion-ui-server.mjs",
    "sync:ecosystem": "bash scripts/sync-ecosystem.sh",
    "local:preflight": "bash scripts/local-preflight.sh"
  },
  "pnpm": {
    "overrides": {
      "eslint-plugin-ft-flow": "3.0.11",
      "eslint-plugin-react-native": "5.0.0",
      "esbuild": "0.27.2",
      "fast-json-patch": "3.1.1",
      "tmp": "0.2.5",
      "body-parser": "2.2.1"
    }
  }
}
