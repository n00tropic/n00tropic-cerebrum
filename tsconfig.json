{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "include": ["**/*"],
  "exclude": [
    "**/node_modules/**",
    "**/.pnpm-store/**",
    "**/.git/**",
    "**/.dev/**",
    "**/.cache_local/**",
    "**/.tmp/**",
    "**/.trunk/**",
    "**/.venv*/**",
    "**/dist/**",
    "**/build/**",
    "**/artifacts/**",
    "**/vendor/**",
    "**/.next/**",
    "**/.next-turbo/**",
    "**/.turbo/**",
    "**/coverage/**",
    "**/out/**"
  ]
}
