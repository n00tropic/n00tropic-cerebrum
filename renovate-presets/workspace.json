{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Shared Renovate preset for the n00tropic workspace repositories.",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "dependencyDashboard": true,
  "rangeStrategy": "replace",
  "timezone": "UTC",
  "schedule": ["after 02:00 on monday"],
  "labels": ["dependencies", "renovate"],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 12,
  "regexManagers": [
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": [
        "cli:\\s*\\n\\s*version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "trunk-io/trunk",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*python@(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "python/cpython",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*node@(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "nodejs/node",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*go@(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*hadolint@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "hadolint/hadolint",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*svgo@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "svgo",
      "datasourceTemplate": "npm"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*gofmt@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "golang/go",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*golangci-lint2@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*actionlint@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "rhysd/actionlint",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*bandit@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "bandit",
      "datasourceTemplate": "pypi"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*checkov@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "checkov",
      "datasourceTemplate": "pypi"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*markdownlint-cli2@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "markdownlint-cli2",
      "datasourceTemplate": "npm"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*eslint@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "eslint",
      "datasourceTemplate": "npm"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*osv-scanner@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "google/osv-scanner",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*prettier@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "prettier",
      "datasourceTemplate": "npm"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*renovate@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "renovate",
      "datasourceTemplate": "npm"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*ruff@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "ruff",
      "datasourceTemplate": "pypi"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*shellcheck@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "koalaman/shellcheck",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*shfmt@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "mvdan/sh",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*taplo@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "tamasfe/taplo",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*trufflehog@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "trufflesecurity/trufflehog",
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [".trunk/trunk.yaml"],
      "matchStrings": ["-\\s*yamllint@(?<currentValue>[0-9\\.]+)"],
      "depNameTemplate": "yamllint",
      "datasourceTemplate": "pypi"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "groupName": "Trunk ecosystem",
      "labels": ["ci", "dependencies"],
      "separateMajorMinor": true
    }
  ]
}
